                    android:id="@+id/button1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="15dp"

                    android:bottom="200dp"
                    android:left="200dp"
                    android:radius="100dp"
                    android:right="200dp"
                    android:src="@drawable/samsung"
